<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#848EEA"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_poke"
        android:layout_width="171dp"
        android:layout_height="71dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#470202"
        android:text="PokemÃ³n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_vehic" />

    <Button
        android:id="@+id/btn_persons"
        android:layout_width="171dp"
        android:layout_height="71dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#470202"
        android:text="Personas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_bienv" />

    <Button
        android:id="@+id/btn_vehic"
        android:layout_width="171dp"
        android:layout_height="71dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#470202"
        android:text="Carros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_persons" />

    <TextView
        android:id="@+id/txt_bienv"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="155dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:text="Bienvenidos"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>